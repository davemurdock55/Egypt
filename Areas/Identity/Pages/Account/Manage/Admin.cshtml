@page
@model AdminModel
@{
    ViewData["Title"] = "Admin";
    ViewData["ActivePage"] = ManageNavPages.Admin;
}

<h4>@ViewData["Title"]</h4>

<div class="row">
    <div class="col-md-6">
        <p>If you are an admin, you have the ability to edit user permissions.</p>
        <p>
            <a id="index" asp-controller="UserRoleManagement" asp-action="Index" class="btn btn-outline-primary">Admin Page</a>
        </p>
        <p>
            <a id="displayRoles" asp-controller="UserRoleManagement" asp-action="DisplayRoles" class="btn btn-outline-primary">Manage User Roles</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}