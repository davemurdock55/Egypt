@model List<Microsoft.AspNetCore.Identity.IdentityUser>

@{
    ViewData["Title"] = "Index";
}
<div class="container text-center mt-5" style="margin-top: 100px;">
    <h3 class="text-center">User Management</h3>
    <hr />
</div>

<div class="container">

    @await Html.PartialAsync("_TopMenuPartial")

    <div class="row">
        <div class="col-12">
            @if (Model.Count == 0)
            {
                <p>No users</p>
            }
            else
            {
                <table class="table">
                    <thead class="bg-light text-dark">
                        <tr>
                            <th>UserName</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var u in Model)
                        {
                            <tr>
                                <td>@u.UserName</td>
                                <td>
                                    <a class="btn btn-outline-dark"
                               asp-route-userId="@u.Id"
                               asp-action="Details">View Details</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>