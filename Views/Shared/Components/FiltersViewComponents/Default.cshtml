@{
}

@model IEnumerable<string>

<div class="d-grid gap-2">

    <a asp-controller="Home" asp-action="Burials" asp-route-filter="" class="btn btn-outline-secondary mb-3">Main</a>

    @foreach(string filter in Model)
    {
        <a asp-controller="Home" asp-action="Burials" asp-route-filter="@filter"
           class="mb-1 btn @(ViewBag.SelectedFilter == filter ? "btn-primary" : "btn-outline-secondary")">
            @filter
        </a>

    }

</div>