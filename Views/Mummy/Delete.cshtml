@{
    ViewData["Title"] = "Delete";
}

@model Burialmain
<h3>Confirm Deletion</h3>
<br />
<h4>Are you sure you want to delete this burial #@Model.Id?</h4>

<form method="post" asp-action="Delete">
    <button type="submit">Delete</button>
    <a asp-controller="Home" asp-action="Burials" class="btn btn-primary">Cancel</a>
    <input type="hidden" asp-for="Id" />
</form>